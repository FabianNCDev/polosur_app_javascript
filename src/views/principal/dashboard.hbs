<link href="/stylesheets/simple-sidebar.css" rel="stylesheet">
<div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Start Bootstrap
                    </a>
                </li>
                <li>
                    <a href="#">Dashboard</a>
                </li>
                <li>
                    <a href="#">Shortcuts</a>
                </li>
                <li>
                    <a href="#">Overview</a>
                </li>
                <li>
                    <a href="#">Events</a>
                </li>
                <li>
                    <a href="#">About</a>
                </li>
                <li>
                    <a href="#">Services</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Menu</a>
                      <h1>User Profile</h1>
                      <hr>
                      <h2>Mis Pedidos</h2>
                      {{#unless orders}}
                        <p>
                          No tienes Ordenes Registradas
                        </p>
                      {{/unless}}
                      {{#each orders}}
                        <div class="panel panel-default">
                          <div class="panel-body">
                            <ul class="list-group">
                              {{#each items}}
                                <li class="list-group-item">
                                  <span class="badge">{{ this.price }} Nuevos Soles</span>
                                  {{this.item.title}} | {{ this.qty}} Unidades
                                </li>
                              {{/each}}
                            </ul>
                          </div>
                          <div class="panel-footer">
                            <strong>${{ this.cart.totalPrice }}</strong>
                          </div>
                        </div>
                      {{/each}}

                    </div>
                </div>
            </div>


        </div>
        <!-- /#page-content-wrapper -->

    </div>

    <script>
    window.addEventListener('load',function() {
      $("#menu-toggle").click(function(e) {
          e.preventDefault();
          $("#wrapper").toggleClass("toggled");
      });
    });
    </script>
