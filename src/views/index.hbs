<div class="container">

  <div class="jumbotron" style="height:400px">
    <div class="col-md-6">
      <img src="/images/polo-sur.png" class="img-responsive" alt="Logotipo Polosur" />
    </div>
    <div class="col-md-6">
      <h1>{{appName}}</h1>
      <p>Bienvenido a la tienda Polosur</p>
      <p>
        Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
      </p>
      <p>
        <a class="btn btn-lg btn-primary" href="/ofertas" role="button">Ver Ofertas &raquo;</a>
      </p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success {{#if noMessages}}hidden{{/if}}">
      {{successMsg}}
    </div>
  </div>
</div>

{{#each products}}
  <div class="row" style="padding: 12px;">
    {{#each this}}
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="{{ this.imagePath }}" class="img-responsive" alt="...">
          <div class="caption">
            <h3>{{ this.title }}</h3>
            <p class="description">{{ this.description }}</p>
            <div class="clearfix">
              <div class="price pull-left">
                {{ this.price }} Nuevos SOles
              </div>
              <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Agregar al Carrito</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}
